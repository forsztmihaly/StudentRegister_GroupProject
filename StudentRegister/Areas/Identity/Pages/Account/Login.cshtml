@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-floating mb-3 col-md-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label asp-for="Input.Email" for="floatingInput">Email address</label>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.Password" for="floatingPassword">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row form-group m-0">
                    <button type="submit" class="btn btn-warning mb-3 col-md-12">Log in</button>
                </div>
                <div class="form-group text-center">
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <hr />
                <div class="row align-content-center m-0">
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" class="btn btn-warning col-12" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" class="btn btn-warning col-12" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" class="btn btn-warning col-12" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                    </div>
            </form>
        </section>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
