@model StudentRegister.Models.StudentsSearch

@{ ViewData["Title"] = "Students"; }

<h1 class="mb-3">Students</h1>

<form>
    <div class="row justify-content-center">
        <div class="form-floating mb-3 col-md-3">
            <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Name">
            <label asp-for="Name" class="ms-1">Name</label>
        </div>
        <div class="form-floating mb-3 col-md-3">
            <input asp-for="Gender" class="form-control" id="floatingInput" placeholder="Gender">
            <label asp-for="Gender" class="ms-1">Gender</label>
        </div>
        <div class="form-floating mb-3 col-md-3">
            <input asp-for="Status" class="form-control" id="floatingInput" placeholder="Status">
            <label asp-for="Status" class="ms-1">Status</label>
        </div>
        <div class="form-floating mb-3 col-md-3">
            <input asp-for="Course" class="form-control" id="floatingInput" placeholder="Course">
            <label asp-for="Course" class="ms-1">Course</label>
        </div>
    </div>
    <div class="row justify-content-between m-0">
        <button type="submit" class="btn btn-warning shadow-lg mb-3 col-md-5">Search</button>
        <button asp-action="create" class="btn btn-warning shadow-lg mb-3 col-md-5">Add new student</button>
    </div>
</form>

