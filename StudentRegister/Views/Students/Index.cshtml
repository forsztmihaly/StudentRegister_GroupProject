@*responsive table*@

<div class="table-responsive-md shadow-lg rounded-3">
    <table class="table box-shadow table-hover">
        <thead class="align-content-center">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Students[0].Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Students[0].Dob)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Students[0].Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Students[0].Gender)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Students[0].Status)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Students[0].Course)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Students)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course)
                    </td>
                    <td>
                        <a class="text-black" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="text-black" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="text-black"    asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@*/responsive table*@